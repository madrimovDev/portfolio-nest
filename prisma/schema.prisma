// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  name        String
  lastname    String
  info        String
  description String
  img         String
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Skills {
  id   Int     @id @default(autoincrement())
  name String
  icon String?
  link String
}

model Bio {
  id          Int      @id @default(autoincrement())
  year        DateTime
  description String
}

model Works {
  id     Int           @id @default(autoincrement())
  img    WorksImages[]
  title  String
  source String
  icon   String?
  stack  Stack[]
}

model WorksImages {
  id      Int    @id @default(autoincrement())
  src     String
  Works   Works  @relation(fields: [worksId], references: [id])
  worksId Int
}

model Stack {
  id      Int     @id @default(autoincrement())
  name    String
  link    String
  icon    String?
  Works   Works?  @relation(fields: [worksId], references: [id])
  worksId Int
}

model Blog {
  id       Int          @id @default(autoincrement())
  title    String
  content  String
  img      BlogImages[]
  likes    Likes[]
  comments Comments[]
}

model BlogImages {
  id     Int    @id @default(autoincrement())
  src    String
  Blog   Blog   @relation(fields: [blogId], references: [id])
  blogId Int
}

model Comments {
  id      Int    @id @default(autoincrement())
  email   String
  comment String
  Blog    Blog   @relation(fields: [blogId], references: [id])
  blogId  Int
}

model Likes {
  id       Int    @id @default(autoincrement())
  uniqueId String @unique
  Blog     Blog   @relation(fields: [blogId], references: [id])
  blogId   Int
}

model Hero {
  id          Int    @id @default(autoincrement())
  title       String
  subtitle    String
  description String
  img         String
}
